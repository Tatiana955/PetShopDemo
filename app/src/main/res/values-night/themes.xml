<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetShopDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/shadow1</item>
        <item name="colorPrimaryVariant">@color/dark_azure</item>
        <item name="colorOnPrimary">@color/white1</item>
        <item name="android:windowBackground">@color/white2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mustard</item>
        <item name="colorOnSurface">@color/shadow2</item>
        <item name="colorSecondaryVariant">@color/dull_blue</item>
        <item name="colorOnSecondary">@color/dark_azure1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/shadow2</item>
        <item name="android:textColorPrimary">@color/shadow1</item>
        <item name="android:navigationBarColor">@color/shadow</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Spinner" parent="android:Widget">
        <item name="android:background">@drawable/for_spinner</item>
        <item name="android:clickable">true</item>
        <item name="android:popupBackground">@drawable/for_spinner</item>
        <item name="android:textColorPrimary">@color/shadow1</item>
    </style>

    <style name="SearchViewS" parent="@style/Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/for_spinner</item>
        <item name="android:clickable">true</item>
        <item name="android:popupBackground">@drawable/for_spinner</item>
        <item name="android:textColorPrimary">@color/shadow1</item>
        <item name="android:textColor">@color/shadow1</item>
        <item name="layout">@layout/abc_search_view</item>
        <item name="queryBackground">@drawable/abc_textfield_search_material</item>
        <item name="submitBackground">@drawable/abc_textfield_search_material</item>
        <item name="closeIcon">@drawable/abc_ic_clear_material</item>
        <item name="searchIcon">@drawable/abc_ic_search_api_material</item>
        <item name="searchHintIcon">@drawable/abc_ic_search_api_material</item>
        <item name="suggestionRowLayout">@layout/search_shop_dropdown</item>
    </style>
</resources>